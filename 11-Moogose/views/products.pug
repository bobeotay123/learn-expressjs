extends ./common
block content
  .row.md-3
    each product in products
      .col-sm-3.md-md-3
        .card(style='width: 18rem; margin-right:5px;')
          img.card-img-top(src=product.image, alt='Card image cap')
          .card-body
            h5.card-title=product.name
            p.card-text=product.price
            a.btn.btn-primary(href='#') Buy
