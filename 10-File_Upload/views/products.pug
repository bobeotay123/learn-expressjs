extends ./common
block link
  a.btn.btn-primary(href="/add") Add Products
block content
  .row.md-3.d-flex.align-items-center.justify-content-center
    each product in products
      .col-sm-3.mb-3.mr-4 
        .card
          img.card-img-top(src=product.image, alt='Card image cap')
          .card-body
            h5.card-title=product.name
            p.card-text=product.price
            a.btn.btn-primary(href='#') Buy
