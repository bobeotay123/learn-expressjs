extends ./common.pug
block content
  .limiter
    .container-login100
      .wrap-login100
        form.login100-form.validate-form(action="/login", method="POST")
          span.login100-form-title
            | Member Login
          .wrap-input100
            input.input100(type='text', name='username', placeholder='Username')
            span.focus-input100
            span.symbol-input100
              i.fa.fa-user(aria-hidden='true')
          .wrap-input100.validate-input
            input.input100(type='password', name='password', placeholder='Password')
            span.focus-input100
            span.symbol-input100
              i.fa.fa-lock(aria-hidden='true')
          .container-login100-form-btn
            button.login100-form-btn
              | Login
          .text-center.p-t-12
            a.txt2(href='/create')
              | Create your Account  
          .text-center.p-t-136